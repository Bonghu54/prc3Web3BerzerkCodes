@page
@model prc3Web3BerzerkCodes.Pages.Notas.IndexModel

@{
    ViewData["Title"] = "Notas";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prc3Web3BerzerkCodes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Personalización adicional de estilos */
        body {
            background-color: #f4f4f4;
        }

        .container {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <div class="text-right mb-3">
            <a class="btn btn-primary" asp-page="Create">Create New</a>
        </div>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nota1</th>
                    <th>Nota2</th>
                    <th>ExFin</th>
                    <th>NotaFinal</th>
                    <th>Estudiante</th>
                    <th>Asignatura</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Nota)
                {
                    <tr>
                        <td>@item.Nota1</td>
                        <td>@item.Nota2</td>
                        <td>@item.ExFin</td>
                        <td>@item.NotaFinal</td>
                        <td>@item.Estudiante.Id</td>
                        <td>@item.Asignatura.Id</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-success btn-sm" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
